{
    "env": {
        "es6": true,
        "node": true,
        "jest/globals": true
    },
    "extends": ["standard"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": ["jest"],
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "double"],
        "no-console": "warn",
        "no-eval": "error",
        "import/first": "error"
    }
}
